<UserControl x:Class="TCAssistant.BranchSelectorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TCAssistant"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Width="150" Height="25">Expected Fixed Branch:</Label>
        <ComboBox x:Name="BranchCombo" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" Width="700" Height="25" Text="{Binding SelectedText}" ItemsSource="{Binding BranchItemCheckedStates}" IsEditable="True" MaxDropDownHeight="160">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsChecked}" Width="{Binding ActualWidth, ElementName=BranchCombo}">
                            <TextBlock Text="{Binding BranchItem.BranchItemName}" />
                        </CheckBox>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</UserControl>
